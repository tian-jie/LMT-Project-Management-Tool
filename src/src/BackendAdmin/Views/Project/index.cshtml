                            <div id="chart_plot_01" class="demo-placeholder">

                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12  bg-white">
                        <div class="x_title">
                            <h2>Cost by Roles</h2>
                            <div class="clearfix"></div>
                        </div>

                        <div class="col-md-3 col-sm-3 dashboard-graph-nopadding">
                            <div id="echart_cost_by_roles_pie" class="demo-placeholder">

                            </div>

                        </div>
                        <div class="col-md-9 col-sm-9 dashboard-graph-nopadding">
                            <div id="echart_cost_by_roles_bar" class="demo-placeholder">

                            </div>

                        </div>

                    </div>

                    <div class="clearfix"></div>
                </div>
            </div>

        </div>
        <br />

    </div>
</div>


@section Scripts {
    <script language="javascript">
        var echart1;
        var echart2;
        var echart3;
        
        function getEffortUserdByDate() {
            console.log('getEffortUserdByDate');
            $.ajax({
                type: 'GET',
                url: '/api/v1/project-api/effort-used-by-day',
                data: {
                    projectGid: '5dbf98c9f4014e1cdcdf1582',
                    taskGid: '5de3b6241ca53362a49754c5'
                },
                success: function (result) {
                    console.log('getEffortUserdByDate - success');
                    initAcEchart(result.data);
                    setTimeout(function () {
                        window.onresize = function () {
                            echart1.resize();
                            echart2.resize();
                            echart3.resize();
                        }
                    }, 200)

                }
            });
            $.ajax({
                type: 'GET',
                url: '/api/v1/project-api/effort-used-by-role-category',
                data: {
                    projectGid: '5dbf98c9f4014e1cdcdf1582',
                    taskGid: '5de3b6241ca53362a49754c5'
                },
                success: function (result) {
                    console.log('effort-used-by-role - success');
                    initEffortUsedByRoleEchartBar(result.data);
                    initEffortUsedByRoleEchartPie(result.data);
                    setTimeout(function () {
                        window.onresize = function () {
                            echart1.resize();
                            echart2.resize();
                            echart3.resize();
                        }
                    }, 200)

                }
            });
        }

        $(document).ready(function () {
            getEffortUserdByDate();
        });


        function initFlot(data) {
            var arr_data1 = [];
            var arr_data2 = [];
            data.forEach((value, index) => {
                var x = [];
                x.push(new Date(value.date).getTime(), value.totalHours);
                var y = [];
                y.push(new Date(value.date).getTime(), value.totalHoursRate);

                arr_data1.push(x);
                arr_data2.push(y);
            });

            //arr_data1 = [
            //    [gd(2012, 1, 1), 10],
            //    [gd(2012, 1, 2), 40],
            //    [gd(2012, 1, 3), 30],
            //    [gd(2012, 1, 4), 60],
            //];

            //arr_data2 = [
            //    [gd(2012, 1, 1), 30],
            //    [gd(2012, 1, 2), 40],
            //    [gd(2012, 1, 3), 50],
            //    [gd(2012, 1, 4), 30],
            //];


            var chart_plot_01_settings = {
                series: {
                    lines: {
                        show: false,
                        fill: true
                    },
                    splines: {
                        show: true,
                        tension: 0.4,
                        lineWidth: 1,
                        fill: 0.4
                    },
                    points: {
                        radius: 0,
                        show: true
                    },
                    shadowSize: 2
                },
                grid: {
                    verticalLines: true,
                    hoverable: true,
                    clickable: true,
                    tickColor: '#d5d5d5',
                    borderWidth: 1,
                    color: '#fff'
                },
                colors: ['rgba(38, 185, 154, 0.38)', 'rgba(3, 88, 106, 0.38)'],
                xaxis: {
                    tickColor: 'rgba(51, 51, 51, 0.06)',
                    mode: 'time',
                    timeformat: '%m-%d',
                    tickSize: [1, 'month'],
                    //tickLength: 10,
                    axisLabel: 'Date',
                    axisLabelUseCanvas: true,
                    axisLabelFontSizePixels: 12,
                    axisLabelFontFamily: 'Verdana, Arial',
                    axisLabelPadding: 10
                },
                yaxis: {
                    ticks: 8,
                    tickColor: 'rgba(51, 51, 51, 0.06)',
                },
                tooltip: false
            }

            if ($('#chart_plot_01').length) {
                console.log('Plot1');

                $.plot($('#chart_plot_01'), [arr_data1, arr_data2], chart_plot_01_settings);
            }
        }

        function initAcEchart(data) {
            var xData = [];

            var totalHoursData = [];
            var totalHoursRateData = [];
            data.forEach((value, index) => {
                xData.push(value.date.substring(0, 10))
                totalHoursData.push(value.totalHours)
                totalHoursRateData.push(value.totalHoursRate)
            });


            console.log('getEffortUserdByDate - create myChart');

            echart1 = echarts.init(document.getElementById('chart_plot_01'));
            echart1.setOption({
                //title: {
                //    text: 'Actual Cost vs. Planned Cost',
                //    textStyle: {
                //        fontSize: '18px',
                //        fontWeight: 400,
                //        color: '#73879C',
                //        fontFamily: '"Helvetica Neue", Roboto, Arial, "Droid Sans", sans-serif'
                //    }
                //},
                legend: {
                    type: 'plain',
                    //orient: 'vertical',
                },
                grid: {
                    right: '0px',
                    left: '70px',
                    top: '36px',
                    bottom: '30px'
                },
                xAxis: {
                    type: 'category',
                    boundaryGap: false,
                    data: xData
                },
                color: ['rgba(38, 185, 154, 0.38)', 'rgba(3, 88, 106, 0.38)'],

                tooltip: {
                    trigger: 'axis'
                },
                yAxis: {
                    type: 'value'
                },
                series: [{
                    name: 'Total Hours Spent',
                    data: totalHoursData,
                    type: 'line',
                    areaStyle: {
                        color: ['rgba(38, 185, 154, 0.38)']
                    },
                }, {
                    name: 'Total Cost Spent',
                    data: totalHoursRateData,
                    type: 'line',
                    areaStyle: {
                        color: ['rgba(3, 88, 106, 0.38)']
                    }
                }]
            });
        }


        function initEffortUsedByRoleEchartPie(data) {

            data.forEach((value, index) => {
                value.name = value.roleName;
                value.value = value.totalHoursRate;
            });


            console.log('initEffortUsedByRoleEchartPie - create myChart');

            echart2 = echarts.init(document.getElementById('echart_cost_by_roles_pie'));
            echart2.setOption({
                tooltip: {
                    trigger: 'item'
                },
                legend: {
                    show: false
                },
                series: [
                    {
                        name: 'Cost By Role:',
                        type: 'pie',
                        radius: ['40%', '90%'],
                        center: ['50%', '40%'],
                        avoidLabelOverlap: false,
                        itemStyle: {
                            borderRadius: 10,
                            borderColor: '#fff',
                            borderWidth: 2
                        },
                        label: {
                            show: false,
                            position: 'center'
                        },
                        emphasis: {
                            label: {
                                show: true,
                                fontSize: '11',
                                fontWeight: '300'
                            }
                        },
                        labelLine: {
                            show: false
                        },
                        data: data
                    }
                ]
            });
        }


        function initEffortUsedByRoleEchartBar(data) {
            var dataList = [['role', 'percentage', 'amount']];

            data.forEach((value, index) => {
                d = [];
                d.push(value.roleName, 0, value.totalHoursRate);
                dataList.push(d);
            });

            echart3 = echarts.init(document.getElementById('echart_cost_by_roles_bar'));
            echart3.setOption({
                dataset: {
                    source: dataList
                },
                grid: {
                    right: '20px',
                    left: '120px',
                    top: '20px',
                    bottom: '30px'
                },

                xAxis: {
                    name: 'amount',
                    //type: 'category',
                    boundaryGap: false,
                },
                yAxis: {
                    type: 'category',
                    textStyle: {
                        color: '#FF0000',
                        fontSize:'34px'
                    }
                },

                series: [
                    {
                        type: 'bar',
                        encode: {
                            // Map the "amount" column to X axis.
                            x: 'amount',
                            // Map the "product" column to Y axis
                            y: 'role'
                        }
                    }
                ]
            });
        }

    </script>
}
